---
layout: layouts/base.njk
marker: "making"
---

<style>
    main {
        padding: 12rem 4rem 6rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .artifact-spread {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 6rem;
        min-height: 80vh;
        align-items: start;
    }

    .context-field {
        padding-top: 4rem;
    }

    .artifact-num {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.6rem;
        color: var(--ink-ghost);
        letter-spacing: 0.2em;
        margin-bottom: 3rem;
    }

    /* Context excerpt - shaped text with stagger (like prompt-poem) */
    .context-poem {
        position: relative;
    }

    .context-line {
        display: block;
        font-size: 1.1rem;
        line-height: 2.4;
        color: var(--ink-faint);
        transition: color 0.4s ease, transform 0.4s ease;
        cursor: default;
    }

    .context-line:nth-child(1) { margin-left: 0; }
    .context-line:nth-child(2) { margin-left: 2rem; }
    .context-line:nth-child(3) { margin-left: 1rem; }
    .context-line:nth-child(4) { margin-left: 3rem; }
    .context-line:nth-child(5) { margin-left: 0.5rem; }
    .context-line:nth-child(6) { margin-left: 2.5rem; }
    .context-line:nth-child(7) { margin-left: 1.5rem; }
    .context-line:nth-child(8) { margin-left: 1rem; }

    .context-line:hover {
        color: var(--bloom);
        transform: translateX(0.25rem);
    }

    .context-poem:hover .context-line {
        color: var(--ink-light);
    }

    .context-poem:hover .context-line:hover {
        color: var(--bloom);
    }

    .context-line.accident {
        color: var(--accident);
    }

    .context-poem:hover .context-line.accident {
        color: var(--accident);
    }

    .artifact-info {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--ink-ghost);
    }

    .artifact-title {
        font-size: 1.2rem;
        font-weight: 300;
        font-style: italic;
        color: var(--ink);
        margin-bottom: 0.5rem;
    }

    .artifact-meta {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.65rem;
        color: var(--ink-faint);
        line-height: 1.8;
    }

    .artifact-meta a {
        color: var(--ink-faint);
        text-decoration: underline;
        text-decoration-color: var(--ink-ghost);
        text-underline-offset: 2px;
    }

    .artifact-meta a:hover {
        color: var(--bloom);
    }

    /* The artifact display - pan/zoom container */
    .artifact-field {
        position: relative;
    }

    .artifact-display {
        background: var(--paper-dark);
        border: 1px solid var(--ink-ghost);
        position: relative;
        overflow: hidden;
        height: 70vh;
        cursor: grab;
    }

    .artifact-display:active {
        cursor: grabbing;
    }

    .artifact-display .zoom-hint {
        position: absolute;
        bottom: 1rem;
        right: 1rem;
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.6rem;
        color: var(--ink-ghost);
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .hint-mobile {
        display: none;
    }

    @media (pointer: coarse) {
        .hint-desktop { display: none; }
        .hint-mobile { display: inline; }
    }

    .artifact-display.has-interacted .zoom-hint {
        opacity: 0;
    }

    /* Fullscreen button */
    .fullscreen-btn {
        position: absolute;
        top: 1rem;
        right: 1rem;
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.6rem;
        color: var(--ink-ghost);
        background: var(--paper);
        border: 1px solid var(--ink-ghost);
        padding: 0.4rem 0.6rem;
        cursor: pointer;
        transition: all 0.2s ease;
        z-index: 10;
    }

    .fullscreen-btn:hover {
        color: var(--bloom);
        border-color: var(--bloom);
    }

    /* Fullscreen mode */
    .artifact-display.fullscreen {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100vw;
        height: 100vh;
        z-index: 9999;
        border: none;
        background: var(--paper);
    }

    .artifact-display.fullscreen .fullscreen-btn {
        top: 2rem;
        right: 2rem;
    }

    .artifact-display.fullscreen .zoom-hint {
        bottom: 2rem;
        right: 2rem;
    }

    .artifact-viewport {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        transform-origin: center center;
        transition: transform 0.1s ease-out;
    }

    .artifact-viewport img,
    .artifact-viewport svg {
        max-width: 90%;
        max-height: 90%;
        pointer-events: none;
        user-select: none;
    }

    /* Interactive HTML artifacts (iframe) */
    .artifact-display--interactive {
        cursor: default;
    }

    .artifact-display--interactive:active {
        cursor: default;
    }

    .artifact-iframe {
        width: 100%;
        height: 100%;
        border: none;
        display: block;
    }

    .artifact-display--interactive .zoom-hint {
        display: none;
    }

    /* Context section - the words before/after */
    .artifact-context {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        margin-top: 6rem;
        margin-bottom: 4rem;
    }

    .context-block {
        padding-top: 1.5rem;
        border-top: 1px solid var(--ink-ghost);
    }

    .context-label {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.6rem;
        letter-spacing: 0.15em;
        color: var(--ink-ghost);
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    .context-text {
        font-size: 0.95rem;
        line-height: 1.9;
        color: var(--ink-light);
        font-style: italic;
    }

    .context-text .accident {
        color: var(--accident);
        font-style: normal;
    }

    /* Collaborator's context - your voice */
    .collaborator-context {
        margin-top: 4rem;
        margin-bottom: 4rem;
    }

    .collaborator-block {
        max-width: 38rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--ink-ghost);
    }

    .collaborator-block .context-label {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.6rem;
        letter-spacing: 0.15em;
        color: var(--ink-ghost);
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    .collaborator-block .context-text {
        font-size: 0.95rem;
        line-height: 1.9;
        color: var(--ink-light);
    }

    .collaborator-block .context-text p {
        margin-bottom: 1.5rem;
    }

    .collaborator-block .context-text a {
        color: var(--ink-light);
        text-decoration: underline;
        text-decoration-color: var(--ink-ghost);
        text-underline-offset: 2px;
    }

    .collaborator-block .context-text a:hover {
        color: var(--bloom);
    }

    /* Witnesses - others who responded (optional) */
    .witnesses-context {
        margin-top: 2rem;
        margin-bottom: 4rem;
    }

    .witnesses-block {
        max-width: 38rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--ink-ghost);
    }

    .witnesses-block .context-label {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.6rem;
        letter-spacing: 0.15em;
        color: var(--ink-ghost);
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    .witnesses-block .context-text {
        font-size: 0.95rem;
        line-height: 1.9;
        color: var(--ink-light);
    }

    .witnesses-block blockquote {
        margin: 0 0 1.5rem 0;
        padding-left: 1rem;
        border-left: 2px solid var(--ink-ghost);
        font-style: italic;
    }

    .witnesses-block blockquote cite {
        display: block;
        margin-top: 0.5rem;
        font-style: normal;
        font-size: 0.8rem;
        color: var(--ink-faint);
    }

    .witnesses-block blockquote cite a {
        color: var(--ink-faint);
        text-decoration: none;
    }

    .witnesses-block blockquote cite a:hover {
        color: var(--bloom);
    }

    /* Navigation */
    .artifact-nav {
        display: flex;
        justify-content: space-between;
        padding: 4rem 0;
        border-top: 1px solid var(--ink-ghost);
        margin-top: 6rem;
    }

    .nav-link {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.7rem;
        color: var(--ink-faint);
    }

    .page-marker {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.65rem;
        color: var(--ink-ghost);
    }

    @media (max-width: 1000px) {
        main {
            padding: 8rem 2rem 4rem;
        }

        .artifact-spread {
            grid-template-columns: 1fr;
            gap: 4rem;
        }

        .artifact-context {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }

    @media (max-width: 768px) {
        main {
            padding: 6rem 1.5rem 3rem;
        }

        .context-field {
            padding-top: 0;
        }

        /* Remove stagger on mobile */
        .context-line:nth-child(n) {
            margin-left: 0;
        }

        .context-line {
            font-size: 1rem;
            line-height: 2;
        }

        .artifact-display {
            height: 50vh;
        }

        .artifact-display .zoom-hint {
            font-size: 0.55rem;
        }

        .artifact-nav {
            margin-top: 3rem;
            padding: 2rem 0;
        }

        .context-text {
            font-size: 0.9rem;
            line-height: 1.8;
        }
    }
</style>

<article class="artifact-spread" data-pagefind-body data-pagefind-filter="type:artifact">

    <div class="context-field">
        <div class="artifact-num">ARTIFACT NO. {{ seriesNumber | default("01") }}</div>

        {% if contextExcerpt %}
        <div class="context-poem">
            {% if contextExcerpt.length %}
                {% for line in contextExcerpt %}
                <span class="context-line{% if line.accident %} accident{% endif %}">{{ line.text | default(line) }}</span>
                {% endfor %}
            {% else %}
                <span class="context-line{% if contextExcerpt.accident %} accident{% endif %}">{{ contextExcerpt.text | default(contextExcerpt) }}</span>
            {% endif %}
        </div>
        {% endif %}

        <div class="artifact-info">
            <h1 class="artifact-title">{{ title }}</h1>
            <div class="artifact-meta">
                {% if medium %}{{ medium }}{% if plottable %} · plottable{% endif %}<br>{% endif %}
                {% if creator %}made by <a href="/making/creator/{{ creator | creatorFamily }}/">{{ creator | creatorFamily }}</a>{% if creator | creatorModel %} · <a href="/making/creator/{{ creator | slugify }}/">{{ creator | creatorModel }}</a>{% endif %}<br>{% endif %}
                <a href="/making/#artifacts">{{ series | default("artifacts") }}</a> · {{ date | readableDate }}
            </div>
        </div>
    </div>

    <div class="artifact-field">
        {% if src | isHTMLFile %}
        <figure class="artifact-display artifact-display--interactive" id="artifact-display">
            <button class="fullscreen-btn" id="fullscreen-btn" aria-label="Toggle fullscreen">expand</button>
            <iframe src="{{ src }}" title="{{ title }}" class="artifact-iframe" sandbox="allow-scripts allow-same-origin"></iframe>
        </figure>
        {% else %}
        <figure class="artifact-display" id="artifact-display">
            <button class="fullscreen-btn" id="fullscreen-btn" aria-label="Toggle fullscreen">expand</button>
            <div class="artifact-viewport" id="artifact-viewport">
                {% if src %}
                <img src="{{ src }}" alt="{{ title }}" draggable="false">
                {% endif %}
            </div>
            <span class="zoom-hint"><span class="hint-desktop">scroll to zoom · drag to pan · double-click to reset</span><span class="hint-mobile">pinch to zoom · drag to pan · double-tap to reset</span></span>
        </figure>
        {% endif %}
    </div>

</article>

{% if contextBefore or contextAfter %}
<section class="artifact-context">
    {% if contextBefore %}
    <div class="context-block">
        <div class="context-label">before making</div>
        <div class="context-text">{{ contextBefore | safe }}</div>
    </div>
    {% endif %}
    {% if contextAfter %}
    <div class="context-block">
        <div class="context-label">after making</div>
        <div class="context-text">{{ contextAfter | safe }}</div>
    </div>
    {% endif %}
</section>
{% endif %}

{% if content | trim %}
<section class="collaborator-context">
    <div class="collaborator-block">
        <div class="context-label">context</div>
        <div class="context-text">{{ content | safe }}</div>
    </div>
</section>
{% endif %}

{% if witnesses %}
<section class="witnesses-context">
    <div class="witnesses-block">
        <div class="context-label">witnesses</div>
        <div class="context-text">{{ witnesses | safe }}</div>
    </div>
</section>
{% endif %}

<nav class="artifact-nav">
    <a href="/making/" class="nav-link">← making</a>
    <span class="page-marker">002</span>
</nav>

<script>
(function() {
    const container = document.getElementById('artifact-display');
    const fullscreenBtn = document.getElementById('fullscreen-btn');
    const isInteractive = container && container.classList.contains('artifact-display--interactive');
    const viewport = document.getElementById('artifact-viewport');

    if (!container) return;

    // Interactive artifacts (iframes): only fullscreen, no pan/zoom
    if (isInteractive) {
        let isFullscreen = false;
        if (fullscreenBtn) {
            fullscreenBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                isFullscreen = !isFullscreen;
                container.classList.toggle('fullscreen', isFullscreen);
                fullscreenBtn.textContent = isFullscreen ? 'close' : 'expand';
                document.body.style.overflow = isFullscreen ? 'hidden' : '';
            });
        }
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && isFullscreen) {
                isFullscreen = false;
                container.classList.remove('fullscreen');
                fullscreenBtn.textContent = 'expand';
                document.body.style.overflow = '';
            }
        });
        return;
    }

    if (!viewport) return;

    let scale = 1;
    let panX = 0;
    let panY = 0;
    let isDragging = false;
    let startX, startY;
    let startPanX, startPanY;
    let isFullscreen = false;

    const MIN_SCALE = 0.5;
    const MAX_SCALE = 5;

    function updateTransform() {
        viewport.style.transform = `translate(${panX}px, ${panY}px) scale(${scale})`;
    }

    function markInteracted() {
        container.classList.add('has-interacted');
    }

    // Fullscreen toggle
    function toggleFullscreen() {
        isFullscreen = !isFullscreen;
        container.classList.toggle('fullscreen', isFullscreen);
        fullscreenBtn.textContent = isFullscreen ? 'close' : 'expand';
        document.body.style.overflow = isFullscreen ? 'hidden' : '';

        // Reset zoom when entering/exiting fullscreen
        scale = 1;
        panX = 0;
        panY = 0;
        viewport.style.transition = 'transform 0.3s ease';
        updateTransform();
        setTimeout(() => {
            viewport.style.transition = 'transform 0.1s ease-out';
        }, 300);
    }

    if (fullscreenBtn) {
        fullscreenBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleFullscreen();
        });
    }

    // Escape to exit fullscreen
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && isFullscreen) {
            toggleFullscreen();
        }
    });

    // Mouse wheel zoom
    container.addEventListener('wheel', (e) => {
        e.preventDefault();
        markInteracted();

        const rect = container.getBoundingClientRect();
        const mouseX = e.clientX - rect.left - rect.width / 2;
        const mouseY = e.clientY - rect.top - rect.height / 2;

        const delta = e.deltaY > 0 ? 0.9 : 1.1;
        const newScale = Math.min(MAX_SCALE, Math.max(MIN_SCALE, scale * delta));

        // Zoom toward mouse position
        const scaleChange = newScale / scale;
        panX = mouseX - (mouseX - panX) * scaleChange;
        panY = mouseY - (mouseY - panY) * scaleChange;
        scale = newScale;

        updateTransform();
    }, { passive: false });

    // Mouse drag pan
    container.addEventListener('mousedown', (e) => {
        isDragging = true;
        startX = e.clientX;
        startY = e.clientY;
        startPanX = panX;
        startPanY = panY;
        markInteracted();
    });

    document.addEventListener('mousemove', (e) => {
        if (!isDragging) return;
        panX = startPanX + (e.clientX - startX);
        panY = startPanY + (e.clientY - startY);
        updateTransform();
    });

    document.addEventListener('mouseup', () => {
        isDragging = false;
    });

    // Double-click to reset
    container.addEventListener('dblclick', () => {
        scale = 1;
        panX = 0;
        panY = 0;
        viewport.style.transition = 'transform 0.3s ease';
        updateTransform();
        setTimeout(() => {
            viewport.style.transition = 'transform 0.1s ease-out';
        }, 300);
    });

    // Touch support
    let lastTouchDist = 0;
    let lastTouchCenter = { x: 0, y: 0 };

    container.addEventListener('touchstart', (e) => {
        markInteracted();
        if (e.touches.length === 1) {
            isDragging = true;
            startX = e.touches[0].clientX;
            startY = e.touches[0].clientY;
            startPanX = panX;
            startPanY = panY;
        } else if (e.touches.length === 2) {
            isDragging = false;
            const dx = e.touches[1].clientX - e.touches[0].clientX;
            const dy = e.touches[1].clientY - e.touches[0].clientY;
            lastTouchDist = Math.sqrt(dx * dx + dy * dy);
            lastTouchCenter = {
                x: (e.touches[0].clientX + e.touches[1].clientX) / 2,
                y: (e.touches[0].clientY + e.touches[1].clientY) / 2
            };
        }
    }, { passive: true });

    container.addEventListener('touchmove', (e) => {
        e.preventDefault();
        if (e.touches.length === 1 && isDragging) {
            panX = startPanX + (e.touches[0].clientX - startX);
            panY = startPanY + (e.touches[0].clientY - startY);
            updateTransform();
        } else if (e.touches.length === 2) {
            const dx = e.touches[1].clientX - e.touches[0].clientX;
            const dy = e.touches[1].clientY - e.touches[0].clientY;
            const dist = Math.sqrt(dx * dx + dy * dy);
            const delta = dist / lastTouchDist;
            const newScale = Math.min(MAX_SCALE, Math.max(MIN_SCALE, scale * delta));

            scale = newScale;
            lastTouchDist = dist;
            updateTransform();
        }
    }, { passive: false });

    container.addEventListener('touchend', () => {
        isDragging = false;
    });
})();
</script>
